<div class="container jumbotron">
    <div class="row">
        <diV class="col-md-4 ml-2 mt-4 text-center">
            <nav>
                <h2 style="color:rgb(3, 2, 2)">Motor Trend News Scraper</h2>
            </nav>
        </diV>
        <diV class="saved col-md-4 mt-5 text-center">
            <h2 style="color: rgb(0, 74, 172)">Saved Articles
            </h2>
        </diV>
        <div class="container col-md-3 mt-4 mb-3 ml-5 text-center">
            <header>
                <nav>
                    <h2><a class="nav-link" style="color:olive" href="/">HOME </a></h2>
                </nav>
            </header>
        </diV>
        <div class="col-md-1">
        </div>
    </div>

    <div class="bg jumbotron jumbotron-fluid text-center">
        <h1 class="display-4" style="color:rgb(110, 1, 1)">Motor Trend Today</h1>
        <p class="lead">GET THE LATEST NEWS FROM <i>MOTOR TREND</i></p>
    </div>

    <div class="container">
        {{#each articles}}
        <div class="card bg-light mb-3">
            <div class="card-body">
                <strong>
                    <h2 class="card-title">{{title}}</h2>
                </strong>
                <strong>
                    <h4 class="card-text">{{intro}}</h4>
                </strong>
                <h5><a href="{{link}}" class="card-link" target="_blank">View Article on <i>MOTOR TREND</i></a></h5>
                <a data-articleId={{_id}} class="btn btn-primary unsave-btn">Remove from saved</a>
                <a data-articleId={{_id}} class="btn btn-primary note-modal-btn" data-toggle="modal">Add note</a>
            </div>
        </div>
        {{/each}}
    </div>
    <br>
    <hr>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                </div>

                <div class="col-sm-3">
                    <h3 class="text-center"><a class="nav-link" style="color: rgb(110, 1, 1)" href='https://github.com/404'>Zoom-Zoom</a></h3>
                </div>

                <div class="col-sm-2 text-center">
                    <h3><a style="color: rgb(110, 1, 1)">
                            <<<<<<|>>>>>>
                        </a></h3>
                </div>

                <div class="col-sm-3">
                    <h3 class="text-center"><a class="nav-link" style="color: rgb(110, 1, 1)" href='https://github.com/DKMS37/All-News-Thats-Fit-to-Scrape'>GitHub
                            Repo</a></h3>
                </div>

                <div class="col-sm-2">
                </div>
            </div>
        </div>
    </footer>

    <div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="note-modal-title" class="modal-title"></h5>
                </div>
                <div class="modal-body container">
                    <ul class="notes-list">
                    </ul>
                    <div class="form-group">
                        <label for="note-area">New note</label>
                        <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary note-save-btn" data-dismiss="modal">Save</button>

                    </div>
                </div>
            </div>
        </div>